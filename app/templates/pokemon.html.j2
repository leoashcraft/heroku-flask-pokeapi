{% extends 'base.html' %}
{% block css %}
<link rel="stylesheet" href="{{url_for('static',filename='css/pokemon.css')}}">
{% endblock %}
{% block title %}
Pokemon API Lookup
{% endblock %}
{% block content %}

{% if error %}
<div class="container error">
  <div class="row align-items-start">
  <div class="col">
    <h3><img src="{{url_for('static',filename='hobo.png')}}"><br /><br />{{error}}</h3>
    <p>Check your spelling and give it a try again...</p>
    <form class="d-flex" action="{{url_for('main.pokemon')}}" method="POST">
      {{ g.form.hidden_tag() }}
      {{ g.form.search(class="form-control me-2") }}
      {{ g.form.submit(class="btn btn-outline-success") }}
    </form>
  </div>
  <div class="col"></div>
</div>
{% else %}
    <div class='pokemoncontent'>
        <div class='pokemoncontainer'>
          <div class='right_top'>
      {% if sprite %}
        <img src="{{sprite}}" class="pokesprite">
      {% endif %}
            </div>  
          <div class='left_bottom'>
    <div id="rcorners3">
    <div id="content">
      {% if stats %}
    <h1 style="text-align: center; margin-bottom: 33px;">
      {{pokemon}} Stats
    </h1>
  <table class="table table-striped table-hover pokestats">
    <thead>
      <tr>
        <th scope="col">Stat</th>
        <th scope="col">Base</th>
        <th scope="col">Effort</th>
      </tr>
    </thead>
    <tbody>
    {% for stat in stats %}
      <tr>
        <th scope="row">{{stat['poke_statname']}}</th>
        <td>{{stat['poke_statbase']}}</td>
        <td>{{stat['poke_stateffort']}}</td>
      </tr>
    {% endfor %}
    </tbody>
  </table>
{% endif %}
</div>
</div>
            </div>
            
        </div>
    </div>
  {% endif %}
{% endblock %}
